<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/background_color">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/alias_logo_vector" />

    <LinearLayout
        android:id="@+id/modesLinearLayout"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo">

        <TextView
            android:id="@+id/classicTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/classic_mode"
            android:layout_marginEnd="2dp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:background="@drawable/text_view_design"/>

        <TextView
            android:id="@+id/ArcadeTextView"
            android:layout_width="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="@string/arcade_mode"
            android:padding="5dp"
            android:background="@drawable/text_view_design"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>